# HTTPx - HTTP Probing Tool
FROM projectdiscovery/httpx:latest

# Set working directory
WORKDIR /workspace

# Create workspace directory
RUN mkdir -p /workspace

# Entry point is httpx
ENTRYPOINT ["httpx"]

# Health check
HEALTHCHECK --interval=30s --timeout=3s \
  CMD httpx -version || exit 1

# Labels
LABEL org.threatweaver.tool="httpx"
LABEL org.threatweaver.category="reconnaissance"
LABEL org.threatweaver.version="latest"
