# Application
APP_NAME=ThreatWeaver
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/threatweaver
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LITELLM_MODEL=gpt-4

# Agent Configuration
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300

# Storage
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./storage
S3_BUCKET_NAME=
S3_REGION=us-east-1

# Sandbox Configuration (Issue #23)
E2B_API_KEY=e2b_your_api_key_here
E2B_TEMPLATE_ID=dbe6pq4es6hqj31ybd38  # threatweaver-security template
SANDBOX_PROVIDER=e2b  # Options: e2b, docker
DOCKER_HOST=unix:///var/run/docker.sock

# Resource Limits
SANDBOX_CPU_LIMIT=2.0  # CPU cores
SANDBOX_MEMORY_LIMIT=4096  # MB
SANDBOX_TIMEOUT=3600  # seconds (1 hour)
SANDBOX_NETWORK_LIMIT=10  # Mbps

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
EMAIL_FROM=notifications@threatweaver.com
